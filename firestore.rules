rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Scenarios: Everyone can read, Auth users can write (TEMPORARY for seeding)
    match /scenarios/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Users: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // AI Scenarios: Users can read/write their own AI-generated scenarios
      match /aiScenarios/{scenarioId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // AI Progress: Users can read/write their own AI scenario progress
      match /aiProgress/{progressId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Chat History (legacy, flat): Users can read/write their own chat history
      match /chatHistory/{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Chat Threads: multiple chats per user
      match /chatThreads/{threadId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        match /messages/{messageId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }

    // Progress: Users can read/write only their own progress
    match /progress/{progressId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Classrooms: Teachers manage their own classes
    match /classrooms/{classroomId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && resource.data.teacherId == request.auth.uid;
      
      match /students/{studentId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/classrooms/$(classroomId)).data.teacherId == request.auth.uid;
      }
    }

    // Default deny for everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
